<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@DefaultTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wholebrain.mnistreader.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="open_menu" mnemonicParsing="false" onAction="#on_open" text="Open" />
              <MenuItem fx:id="close_menu" mnemonicParsing="false" onAction="#on_close" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                  <MenuItem mnemonicParsing="false" text="Empty Color">
                     <graphic>
                        <ColorPicker fx:id="empty_color_picker" accessibleRole="BUTTON" promptText="Empty color" />
                     </graphic>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Full Color">
                     <graphic>
                        <ColorPicker fx:id="full_color_picker" accessibleRole="BUTTON" promptText="Full color" />
                     </graphic>
                  </MenuItem>
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <Menu mnemonicParsing="false" text="Jump to #">
                     <items>
                        <MenuItem mnemonicParsing="false">
                           <graphic>
                              <TextField fx:id="jumpto_textfield" alignment="TOP_LEFT" prefColumnCount="6" />
                           </graphic>
                        </MenuItem>
                     </items>
                  </Menu>
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Canvas fx:id="canvas" height="280.0" width="280.0" BorderPane.alignment="TOP_CENTER" />
   </center>
   <bottom>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="index_label" text="Please open an image dataset.">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ScrollBar fx:id="index_scrollbar" max="0.0" prefHeight="50.0" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
